{
  "name": "web-clipper-extension",
  "version": "1.0.0",
  "description": "Chrome extension for clipping web pages to Markdown",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && cd dist && zip -r ../web-clipper.zip ."
  },
  "keywords": [
    "chrome-extension",
    "web-clipper",
    "markdown"
  ],
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/chrome": "^0.1.33",
    "@types/jest": "^30.0.0",
    "@types/turndown": "^5.0.6",
    "copy-webpack-plugin": "^13.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "turndown": "^7.2.2"
  }
}
