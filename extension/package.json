{
  "name": "web-clipper-extension",
  "version": "1.0.0",
  "description": "Chrome extension for clipping web pages to Markdown",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "playwright test --project=accessibility",
    "test:visual": "playwright test tests/e2e/visual",
    "test:visual:light": "playwright test --project=visual-light",
    "test:visual:dark": "playwright test --project=visual-dark",
    "test:visual:update": "playwright test tests/e2e/visual --update-snapshots",
    "test:visual:ui": "playwright test tests/e2e/visual --ui",
    "package": "npm run build && cd dist && zip -r ../web-clipper.zip ."
  },
  "keywords": [
    "chrome-extension",
    "web-clipper",
    "markdown"
  ],
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.1.33",
    "@types/jest": "^30.0.0",
    "@types/turndown": "^5.0.6",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "serve": "^14.2.1",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "turndown": "^7.2.2"
  }
}
